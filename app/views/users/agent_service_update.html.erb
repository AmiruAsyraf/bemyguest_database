<section id="update_service" class="home-section bg-white">
<h1>Update Service</h1>
<div class="container">
  <div class="row">
    <div class="col-md-12">

       <label>Country :</label>
        <select name="slc_country" class="form-control">
        <% @countries.each do |country|%>
            <option value="<% country.id %>"><%= country.name%></option>
        <% end %>
        </select>
        <br />

        <label>State :</label>
        <select name="slc_state" class="form-control">
         <% @states.each do |state|%>
            <option value="<% state.id %>"><%= state.name%></option>
        <% end %>
        </select>
        <br />


        <label>Place Of Interest :</label>
        <input type="text" name="txt_place_of_interest" class="form-control">
        <br />

        <label>Date Time Start :</label>
        <input type="date" name="txt_date_time_start" class="form-control">
        <br />

        <label>Date Time End :</label>
        <input type="date" name="txt_date_time_end" class="form-control">
        <br />

        <label>Duration :</label>
        <select name="slc_duration" class="form-control">
        <% @durations.each do |duration|%>
            <option value="<% duration.id %>"><%= duration.name%></option>
        <% end %>
        </select>
        <br />

        <label>Price Range :</label>
        <select name="slc_price_range" class="form-control">
        <% @priceranges.each do |pricerange|%>
            <option value="<% pricerange.id %>"><%= pricerange.name%></option>
        <% end %>
        </select>
        <br />

        <label>Description :</label>
        <textarea class="form-control" rows="5" name="txt_description"></textarea>
        <br />

        <label>Food Type :</label>
        <select name="slc_food_type" class="form-control">
        <option value="1">Halal</option>
        <option value="2">Vegetarian</option>
        </select>
        <br />

        <label>Transport :</label>
        <select name="slc_transport" class="form-control">
         <% @transports.each do |transport|%>
           <option value="<% transport.id %>"><%= transport.name%></option>
        <% end %>>
        </select>
        <br />

        <label>Accomodation :</label>
        <select name="slc_accomodation" class="form-control">
         <% @accomodations.each do |accomodation|%>
           <option value="<% accomodation.id %>"><%= accomodation.name%></option>
        <% end %>
        </select>
        <br />

        <button type="submit" class="btn btn-default">Submit</button>

    </div>
  </div>
</div>


</section>

