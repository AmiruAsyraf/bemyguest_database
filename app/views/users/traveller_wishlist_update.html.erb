<section id="traveller_wishlist_update" class="home-section bg-white">
<h1>Update Your Plan.</h1>

	 <div class="container">
         <div class="row centered-form">
          <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">

			<label>Country you would like to Go :</label>
			<select name="slc_country" class="form-control">
			  <% @countries.each do |country|%>
           <option value="<% country.id %>"><%= country.name%></option>
        <% end %>
			</select>
			<br />

			<label>State which you like to visit :</label><br>
			<select name="slc_state" class="form-control">
			  <% @states.each do |state|%>
           <option value="<% state.id %>"><%= state.name%></option>
        <% end %>
			</select>
			<br />

			<label>Do you need a transport? :</label>
			<select name="slc_transport" class="form-control">
			  <% @transports.each do |transport|%>
           <option value="<% transport.id %>"><%= transport.name%></option>
        <% end %>
			</select>
			<br />


			<label>Food Type :</label>
			<select name="slc_food_type" class="form-control">
			 <option value="halal">Halal</option>
			 <option value="vegetarian">Vegetarian</option>
			 <option value="none_food_type">No Issue</option>
			</select><br>

			<label>Accomodation ? :</label>
			<select name="slc_accomodation" class="form-control">
			  <% @accomodations.each do |accomodation|%>
           <option value="<% accomodation.id %>"><%= accomodation.name%></option>
        <% end %>
			</select><br>

			<label>Your price range? :</label>
			<select name="slc_price" class="form-control">
			  <% @priceranges.each do |pricerange|%>
          <option value="<% pricerange.id %>"><%= pricerange.name%></option>
        <% end %>
			</select><br>

			<label>Date Time Start :</label>
			 <input type="date" name="txt_date_time_start" class="form-control">

			<label>Date Time End :</label>
			 <input type="date" name="txt_date_time_start" class="form-control">
			<br>


			<button type="submit" class="btn btn-default">Update your Travel Plan :)</button>
		  </div>
		 </div>
	</div>

</section>

