<section id="menu" class="home-section bg-white">
</section>

<section id="apply_form_agent" class="home-section bg-white">
<h1>Apply Form Agent</h1>
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<label>First Name :</label>
			<input type="text" name="txt_first_name" class="form-control">
			<br />
			<label>Last Name :</label>
			<input type="text" name="txt_last_name" class="form-control">
			<br />
			<label>Email :</label>
			<input type="email" name="txt_email" class="form-control">
			<br/>
			<label>Country :</label>
			<select name="slc_country" class="form-control">
			<% @countries.each do |country|%>
			<option value="<% country.id %>"><%= country.name%></option>
			<% end %>
			</select>
			<br />
			<label>Gender :</label>
			<select name="slc_gender" class="form-control">
			<option value="male">Male</option>
			<option value="female">Female</option>
			</select>
			<br />

			<button type="submit" class="btn btn-default">Submit</button>
		</div>
	</div>
</div>


</section>


